{% extends 'base.html.twig' %}

{% block title %}Pelicula{% endblock %}

{% block body %}
    <h1>Pelicula</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id pelicula</th>
                <td>{{ pelicula.idpelicula }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ pelicula.director }}</td>
            </tr>
            <tr>
                <th>Fecha Estreno</th>
                <td>{{ pelicula.fechaEstreno ? pelicula.fechaEstreno|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duración</th>
                <td>{{ pelicula.duracion }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ pelicula.descripcion }}</td>
            </tr>
            <tr>
                <th>Actores</th>
                <td>{{ pelicula.actores }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ pelicula.imagen }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ pelicula.titulo }}</td>
            </tr>
            <tr>
                <th>Trailer</th>
                <td>{{ pelicula.trailer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pelicula_index') }}">Ir a listado de películas.</a>

    <a href="{{ path('pelicula_editar', {'idpelicula': pelicula.idpelicula}) }}">Editar</a>

    {{ include('pelicula/borrar.html.twig') }}
{% endblock %}
