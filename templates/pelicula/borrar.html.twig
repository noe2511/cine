<form method="post" action="{{ path('pelicula_borrar', {'idpelicula': pelicula.idpelicula}) }}" onsubmit="return confirm('¿Seguro que quiere eliminar esta película?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pelicula.idpelicula) }}">
    <button class="btn">Borrar</button>
</form>
