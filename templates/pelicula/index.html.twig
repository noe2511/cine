{% extends 'base.html.twig' %}

{% block title %}Peliculas{% endblock %}

{% block body %}
    <h1>Peliculas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id película</th>
                <th>Director</th>
                <th>Fecha Estreno</th>
                <th>Duración</th>
                <th>Descripcion</th>
                <th>Actores</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pelicula in peliculas %}
            <tr>
                <td>{{ pelicula.idpelicula }}</td>
                <td>{{ pelicula.titulo }}</td>
                <td>{{ pelicula.director }}</td>
                <td>{{ pelicula.fechaEstreno ? pelicula.fechaEstreno|date('Y-m-d') : '' }}</td>
                <td>{{ pelicula.duracion }}</td>
                <td>{{ pelicula.descripcion }}</td>
                <td>{{ pelicula.actores }}</td>
                <td>{{ pelicula.imagen }}</td>
                <td>{{ pelicula.trailer }}</td>
                <td>
                    <a href="{{ path('pelicula_detalles', {'idpelicula': pelicula.idpelicula}) }}">Detalles</a>
                    <a href="{{ path('pelicula_editar', {'idpelicula': pelicula.idpelicula}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay películas almacenadas.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pelicula_new') }}">Crear nueva película</a>
{% endblock %}
