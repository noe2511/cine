<form method="post" action="{{ path('entrada_borrar', {'identrada': entrada.identrada}) }}" onsubmit="return confirm('¿Está seguro que quiere cancelar esta reserva?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entrada.identrada) }}">
    <button class="btn">Borrar</button>
</form>
